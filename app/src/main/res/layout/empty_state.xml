<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/empty_state_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Opa! Ao que parece, hoje não há nenhum compromisso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/empty_state_icon"
        android:textSize="24sp"
        android:textColor="@color/purple_200"
        android:textStyle="bold"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/empty_state_icon"
        android:layout_width="267dp"
        android:layout_height="254dp"
        android:layout_margin="50dp"
        android:src="@drawable/sloth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>